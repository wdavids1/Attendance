<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.westga.attendance.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Student"
        android:id="@+id/addStudentButton"
        android:layout_gravity="center_horizontal"
        android:onClick="onAddStudentButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Course"
        android:id="@+id/addCourseButton"
        android:layout_gravity="center_horizontal"
        android:onClick="onAddCourseButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Student to Course"
        android:id="@+id/addStudentToCourseButton"
        android:layout_gravity="center_horizontal"
        android:onClick="onAddStudentToCourseButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Attendance"
        android:id="@+id/takeAttendance"
        android:layout_gravity="center_horizontal"
        android:onClick="onTakeAttendanceButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rebuild DB"
        android:id="@+id/rebuilddb"
        android:layout_gravity="center_horizontal"
        android:onClick="onRebuildDBButtonClick" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="edu.westga.attendance.StudentDisplayFragment"
        android:id="@+id/studentDisplayFragment"
        android:layout_gravity="center_horizontal"
        tools:layout="@layout/student_fragment" />
</LinearLayout>
